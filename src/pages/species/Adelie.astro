---
import Layout from "../../layouts/Layout.astro";
import PlotFigure from "../../components/PlotFigure.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../../assets/penguins.json";

const penguinsAdelie = penguins.filter(({ species }) => species === "Adelie");
---
<Layout>
  <nav class="mb-4 flex gap-3 text-sm">
    <a class="underline" href="/species/Adelie">Adelie</a>
    <a class="hover:underline" href="/species/Gentoo">Gentoo</a>
    <a class="hover:underline" href="/species/Chinstrap">Chinstrap</a>
  </nav>

  <h1 class="text-2xl mb-3">Adelie</h1>

  <PlotFigure
    options={{
      marks: [
        Plot.dot(penguinsAdelie, {
          x: "culmen_length_mm",
          y: "culmen_depth_mm",
          stroke: "species",
          opacity: 0.9
        }),
      ],
    }}
  />
</Layout>
